<div class="container-fluid">
  <div class="row burger_pic">
    <div class="col-md-12">
      <img src="/assets/img/burger.png">
    </div>
  </div>

  <div class="row text-center">
    <div class="col-md-12">
      <h2>Eat Da Burger!</h2>
    </div>
  </div>

  <br>

  <div class="row">
    <div class="col-md-6 text-center">
      {{#each burgers}}
      {{#unless devoured}}
      <div class="col-md-12 burgers">
        <span id="burger-id">{{id}} - </span>
        <span id="burger-name">{{burger_name}}</span>
        <input type="button" class="devour-button" data-id={{id}} value="Devour it!">
      </div>
      {{/unless}}
      {{/each}}
    </div>

    <div class="col-md-6 text-center">
      <!-- for each here for non eaten burgers -->
      {{#each burgers}}
      {{#if devoured}}
      <div class="col-md-12 burgers">
        <span id="burger-id">{{id}} - </span>
        <span id="burger-name">{{burger_name}}</span>
      </div>
      {{/if}}
      {{/each}}
    </div>

  </div>

  <br>

  <div class="row">
    <div class="centerBlock">
      <input type="text" id="input-burger-name" placeholder="Enter a new burger here">
      <input type="submit" id="submit-button" value="Submit">
    </div>
  </div>

</div>

